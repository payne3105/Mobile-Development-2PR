<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextTemp"
        android:layout_width="234dp"
        android:layout_height="52dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="191dp"
        android:layout_marginBottom="40dp"
        android:ems="10"
        android:hint="Temperature"
        android:inputType="number"
        android:text="0"
        app:layout_constraintBottom_toTopOf="@+id/textViewC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textViewC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="°C"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textViewF"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTemp" />

    <TextView
        android:id="@+id/textViewF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="°F"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/textViewK"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textViewC"
        app:layout_constraintTop_toBottomOf="@+id/editTextTemp" />

    <TextView
        android:id="@+id/textViewK"
        android:layout_width="76dp"
        android:layout_height="25dp"
        android:layout_marginTop="40dp"
        android:text="°K"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/textViewRe"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textViewF"
        app:layout_constraintTop_toBottomOf="@+id/editTextTemp" />

    <TextView
        android:id="@+id/textViewRe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="°Re"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/textViewR"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textViewK"
        app:layout_constraintTop_toBottomOf="@+id/editTextTemp" />

    <TextView
        android:id="@+id/textViewR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="°R"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textViewRe"
        app:layout_constraintTop_toBottomOf="@+id/editTextTemp" />

    <Button
        android:id="@+id/buttonCount"
        android:layout_width="98dp"
        android:layout_height="53dp"
        android:layout_marginTop="200dp"
        android:backgroundTint="@color/black"
        android:text="Count"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/editTextTemp"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinnerTemp"
        android:layout_width="302dp"
        android:layout_height="48dp"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="97dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextTemp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>